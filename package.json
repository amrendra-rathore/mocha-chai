{
  "name": "mocha-chai",
  "version": "1.0.0",
  "description": "Unit Testing Repository",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "test": "mocha",
    "tests": "mocha --require ts-node/register src/test/**/*_spec.js",
    "test_case": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/test/authtest.spec.js' --timeout 10000",
    "serve": "env-cmd -f .env nodemon src/index.ts",
    "serve:test": "env-cmd -f .env.test nodemon src/index.ts",
    "build": "npx babel-node extra",
    "start:extra": "babel-node extra",
    "start:extraTs": "tsc-watch --project . --onSuccess \"npm run nodemon\"",
    "nodemon": "nodemon ./dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "scriptname": "cmd",
    "gulp:local": "gulp local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amrendra-rathore/express-server.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.18.5",
    "@babel/node": "7.18.5",
    "@babel/preset-env": "7.18.2",
    "@types/chai": "^4.3.3",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cz-conventional-changelog": "3.0.1",
    "eslint": "8.19.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-no-loops": "0.3.0",
    "gulp": "^4.0.2",
    "gulp-mocha": "^8.0.0",
    "husky": "8.0.1",
    "mocha": "^10.0.0",
    "sinon": "^14.0.0",
    "supertest": "^6.2.4",
    "ts-node": "10.8.1",
    "tsc-watch": "5.0.3",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin-tslint": "5.30.5",
    "commitizen": "1.0.4",
    "dotenv": "16.0.1",
    "ejs": "3.1.8",
    "env-cmd": "^10.1.0",
    "express": "4.18.1",
    "express-session": "1.17.3",
    "express-validator": "6.14.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jsonwebtoken": "8.5.1",
    "mongodb": "^4.8.1",
    "mongodb-memory-server": "^8.9.1",
    "mongoose": "^6.4.6",
    "nodemailer": "^6.7.8",
    "nodemon": "2.0.18",
    "passport": "0.6.0",
    "passport-local-mongoose": "^7.1.2",
    "request": "^2.88.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "precommit": "npm run lint"
  }
}
